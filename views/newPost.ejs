<% include partials/header %>


<div class="container; display: block">
    <div class="row">
        <div style="text-align: center; width: 30%; margin: 0 auto"> 
            <h3>Submit a New Album</h3>
            <form action="/music" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="album[newAlbum]" placeholder="Album Name">
                </div>    
                <div class="form-group">
                    <input class="form-control" type="text" name="album[artist]" placeholder="Artist">
                </div>  
                <div class="form-group">
                    <input class="form-control" type="text" name="album[imageURL]" placeholder="Album Cover URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="album[description]" placeholder="description">
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form> <br>
            <a href="/music">Back to Music Forum</a>
        </div>
    </div>
</div>


