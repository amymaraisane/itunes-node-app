<% include ../partials/header %>
    
<div class="container; display: block">
    <div class="row">
        <div style="width: 30%; margin: 0 auto; display: flex; flex-direction: column"> 
            <form action="/music/<%=album._id%>/comments" method="POST">
                <h2>Add New Comment to <%=album.name%></h2> 
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
                <input class="form-control" type="text" name="comment[author]" placeholder="author">
                <button button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
            <br>
            <a class="btn" style="margin: auto; background-color:rgb(30,82,140,.7); color: white" href="/music/<%=album._id%>">Back to Album</a>
        </div>
    </div>
</div>



