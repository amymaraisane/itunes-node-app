<% include ../partials/header %>
    
<div class="container; display: block">
    <div class="row">
        <div style="width: 30%; margin: 0 auto"> 
            <form action="/music/<%=album._id%>/comments" method="POST">
                <h2>Add New Comment to <%=album.name%></h2> 
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
                <input class="form-control" type="text" name="comment[author]" placeholder="author">
                <button button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>

        </div>
    </div>
</div>



