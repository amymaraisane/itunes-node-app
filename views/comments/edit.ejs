<% include ../partials/header %>

<div class="hidden-xs" style="display: flex; align-items: center">
        <a class="btn purpleBtn" href="/music">Back to Albums</a>
</div>

<div class="container; display: block" style="justify-content: center; text-align: center;">
    <div class="row">
        <div class="thumbnail newContent" style="width: 40%; margin: 0 auto; display: flex; flex-direction: column"> 
            <form action="/music/<%=album_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <h2>Edit Comment</h2> 
                <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                <button class="btn blueBtn">Update</button>
            </form>
        </div>
    </div>
</div>

