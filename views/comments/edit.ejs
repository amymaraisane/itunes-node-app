<% include ../partials/header %>

<a class="btn purpleBtn" id="toAlbums" href="/music/<%=albumID%>">Back to Albums</a>

<div class="container; display: block" style="justify-content: center; text-align: center;">
    <div class="row">
        <div style="width: 30%; margin: 0 auto; display: flex; flex-direction: column"> 
            <form action="/music/<%=albumID%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <h2>Edit Comment for <%=album.name%></h2> 
                <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                <button class="btn blueBtn">Update</button>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>