<% include ../partials/header %>
<div class="display: flex; justify-content: text-center" style="background-color:rgba(2, 43, 88, 0.15); border-bottom: black solid 2px">
    <h1 style="margin: 0; padding: 6px">Albums</h1>
</div>
<div class="display: flex; justify-content: text-center">
    <a class= "btn" style= "background-color:rgb(47,67,150,.3); color: black" href="/music/new"><i class="fas fa-plus"></i><strong> New</strong></a>
</div>



<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3>Recently Added</h3>
        </div>
    </div>
    <div class="row">
        <% albums.forEach((album)=>{ %>
            <div class="col-lg-4 col-sm-6 text-center" style="display:flex; flex-wrap:wrap">
                <div class="thumbnail" style="width: 320px; background-color:rgba(2, 43, 88, 0.05); box-shadow: 2px 3px rgb(0, 0, 0, .3)">
                    <img style="width: 300px; height: 300px; margin: 0 auto" src="<%= album.image %>">
                    <div class="caption">
                        <h4> <%= album.name %> - <%= album.artist %> </h4> <br>
                        <p><%-album.about.substring(0, 50) %></p>    
                    </div>
                    <a href="/music/<%= album._id %>" class="btn" style="background-color:rgb(30,82,140,.7); color: white">Go to Forum</a>
                </div>
            </div>
        <%}) %>
    </div>
</div>  
<% include ../partials/footer %>