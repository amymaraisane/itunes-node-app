<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="background-color:rgba(2, 43, 88, 0.15); padding-top: 10px" class="col-md-3">
            <p class="lead">Album Ranking</p>
            <div class="list-group">
                <li class="list-group-item">2017</li>
                <li class="list-group-item">2018</li>
                <li class="list-group-item active">2019</li>
            </div>
        </div>
        <div class="col-md-9, text-center">
            <div class="thumbnail" style="width: 50%; margin: auto">
                <div style="background-color: rgb(47,67,150,.3); height: 4em; display: flex; flex-direction: column; justify-content: center">
                    <h3 style="margin: 0"><%= album.name %></h3></span>
                </div>
                <h4>- <%= album.artist %> -</h4>
                <img class="img-responsive" style="width:100%;
                height:100%;
                overflow:hidden;
                background-position:center center;
                background-repeat:no-repeat;
                background-size:cover" src="<%= album.image %>">
                <div class="caption-full">
                    <p><strong>About: </strong><%= album.about %></p>
                    <div class="row" style="margin: 0">
                        <a class="btn col-xs-12 col-md-4" style="background-color:rgb(30,82,140,.7); color: white" href="/music">Back to Albums</a> 
                        <span class="col-xs-12 col-md-4" style="text-align: center"><i>Added: <%=album.created%></i></span>
                        <a class="btn col-xs-12 col-md-4" style="background-color:rgb(47,67,150,.3); color: black" href="/music/<%=album._id%>/comments/new">Add a Comment</a>
                    </div>
                </div>
            </div>
           <% album.comments.forEach(comment=>{ %>
            <div class="well" style="width: 50%; margin: 5px auto">    
                    <div class="row">
                        <div class="col-md-12">
                            <span class=pull-left><strong><%= comment.author%></strong></span>    
                            <span class="pull-right">Date here</span> <br>
                            <p class="pull-left">
                                <%= comment.text %>
                            </p>
                        </div>    
                    </div>
                 <% }) %>  
            </div>
        </div>   
    </div>
</div>  

  <div style="float:right">
                <a href="/music/<%= album._id %>/edit">Edit Post</a>
                <form action="/music/<%= album._id %>?_method=DELETE" method="POST">
                    <button class="btn">Delete Post</button>
                </form>
        </div>


<% include ../partials/footer %>