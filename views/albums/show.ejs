<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-12, text-center">
            <h3><%= album.name %></h3>
            <h4><%= album.artist %></h4>
            <img src="<%= album.image %>">
            <h5><%= album.about %></h5>
            <p>Added: <%=album.created.toDateString()%></p>
                <% album.comments.forEach(comment=>{ %>
                <p><strong><%= comment.author%></strong> - <%= comment.text %></p>
                <% }) %>
            <a class="btn btn-primary" href="/music/<%=album._id%>/comments/new">Add a Comment</a> <br> 
            <a class="btn btn-primary" href="/music">Back to Albums</a>
        </div>   
        <div style="float:right">
                <a href="/music/<%= album._id %>/edit">Edit Post</a>
                <form action="/music/<%= album._id %>?_method=DELETE" method="POST">
                    <button class="btn">Delete Post</button>
                </form>
        </div>
    </div>
</div>  




<% include ../partials/footer %>