<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-12, text-center">
            <div class="thumbnail" style="width: 50%; margin: auto">
                <div style="background-color: rgb(47,67,150,.3); height: 4em; display: flex; flex-direction: column; justify-content: center">
                    <h3 style="margin: 0"><%= album.name %></h3></span>
                </div>
                <h4>- <%= album.artist %> -</h4>
                <img src="<%= album.image %>">
                <div class="thumbnail" style="width: 220px; margin: auto">
                    <p><%= album.about %></p>
                    <p style="margin-bottom: 3px"><i>Added: <%=album.created.toDateString()%></i></p>
                </div>
                <br>
                <a class="btn" style="background-color:rgb(47,67,150,.3); color: black" href="/music/<%=album._id%>/comments/new">Add a Comment</a>
                <p><% album.comments.forEach(comment=>{ %>
                <strong><%= comment.author%></strong> - <%= comment.text %></p>
                    <% }) %>
                <a class="btn" style="background-color:rgb(30,82,140,.7); color: white" href="/music">Back to Albums</a>
            </div>
           
        </div>   
    </div>
</div>  

  <div style="float:right">
                <a href="/music/<%= album._id %>/edit">Edit Post</a>
                <form action="/music/<%= album._id %>?_method=DELETE" method="POST">
                    <button class="btn">Delete Post</button>
                </form>
        </div>


<% include ../partials/footer %>