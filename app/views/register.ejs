<% include ./partials/header %>

<div class="container" style="margin-top: 20px">
    <div class="row">
        <div class="xs-hidden col-sm-2" style="padding: 0"></div>
        <div class="col-xs-12 col-sm-8">
            <div class="thumbnail login">
                    <form action="/register" method="POST">
                        <h1 class="loginHeader">Sign Up</h1>
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" name="username" placeholder="username">                
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="password" placeholder="password">    
                        </div>
                        <input class="btn purpleBtn" style="margin: 0 auto" type="submit" value="Sign Up">
                    </form>
                <h3 style="margin-top: 15px">Or</h3>
                <a class="btn blueBtn" style="margin-bottom: 10px" href="/login">Log In</a>
            </div>
        </div>
        <div class="xs-hidden col-sm-2" style="padding: 0"></div>
    </div>

    </div>

<% include ./partials/footer %>